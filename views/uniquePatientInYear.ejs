        <div class="content">
        <h1 class="header"></h1>
        <table class="data_table" id="patient_table" >
            <tr>
                <th>AmountOfYears</th>
                <th>PatientAmount</th>
            </tr>
            <% patient.forEach(function(o) { %>
                <tr><td><%= o.AmountOfYears %></td><td><%= o.PatientAmount %></td></tr>
            <% }); %>
        </table>
        <div id="canvas_container">
            <canvas id="myChart" width="200" height="200"></canvas>
        </div>
        <div class="new-line">
            <label>Select Recored Year</label>
            <select id="time-frame" name="time-frame">
                <option>All Years</option>
            </select>
        </div>

        <script src="javascript/array.js" type="text/javascript"></script>
    <script>
        //name of column you want data from
        const chosenField = "PatientAmount"
        //giving function table id
        let dataArray = returnArrayFromTable("patient_table");
        //gets array of values
        let valuesArray = desiredArrayByYear("All Years", dataArray, chosenField);
        //gets labels
        let labelArray = makeLabelArray(dataArray, "AmountOfYears", false);
        //gets colors array - currently can only create array of one color
        let colorArray = makeColorArray(dataArray);
        //creates graph
        let globalChart = generateChart(labelArray, valuesArray, colorArray, "PatientAmount", 'bar' )
        //makes dropdown
        let years = makeYearArray(dataArray, "AmountOfYears");
        addSelectYears(years);

        //changing the value on the chart based on selection in the dropdown
        document.getElementById('time-frame').addEventListener('change', function() {
                let changedDataArray = dataArrayByYear(dataArray, this.value, "AmountOfYears");
                let changedValuesArray = desiredArrayByYear(this.value, dataArray, chosenField);
                let changedLabelArray = makeLabelArray(changedDataArray, "AmountOfYears", false);
                let changedColorArray = makeColorArray(changedDataArray);
                globalChart.destroy();
                globalChart = generateChart(changedLabelArray, changedValuesArray, changedColorArray, "PatientAmount", 'bar');
            });

    </script>
</body>
