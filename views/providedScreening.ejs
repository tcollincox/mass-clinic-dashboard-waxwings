<!DOCTYPE html>
<html>
    <head>
        <title>
            Referrals
        </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
        <style>
            *{
                margin: 0px;
                padding: 0px;
                padding-top: 20px ;
            }
            
            h1{
                text-align: center;
                margin: 0px auto;
                width: 50%;
            }
            table{
                border-collapse: collapse;
            }
            table, td, th{
                border: 1px solid black ;
                text-align: center;
                padding:5px;
            }
            #canvas_container{
                margin:0px auto ;
                height: 200px;
                width: 25%;
            }
            .data_table{
                visibility: collapse;
            }
        </style>
    </head>
    <body>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <a href="/">Home</a> 
        <h1 class="header">Patient Screenings By Year</h1>
        <table class="data_table" id="screening_table" >
            <tr>
                <th>Patient Amount</th>
                <th>Recorded Year</th>
            </tr>
            <% patients.forEach(function(o) { %>
                <tr><td><%= o.PatientAmount %></td><td><%= o.RecordedYear %></td></tr>
            <% }); %>
        </table>
        <div id="canvas_container">
            <canvas id="myChart" width="200" height="200"></canvas>
        </div>
        
        <script>
            let screeningsPatientAmount =[];
            let screeningsRecoredYear = [];
            function arrayTable(table_id){
                let table = document.getElementById(table_id).rows;
                console.log(table);
                for(let i = 1; i<table.length; i++ ){
                        screeningsPatientAmount.push(table[i].cells[0].childNodes[0].nodeValue);
                        screeningsRecoredYear.push(table[i].cells[1].childNodes[0].nodeValue);
                }
                
            }

            arrayTable("screening_table");

            const labels = [
                "2019",
                "2020",
                "2021"
                ];
                const data = {
                labels: labels,
                datasets: [{
                    label: 'Screenings',
                    backgroundColor: 'rgb(100, 200, 132)',
                    
                    data: screeningsPatientAmount,
                }]
                };
            
                const config = {
                    type: 'bar',
                    data,
                    options: {}
                };

                var myChart = new Chart(
                    document.getElementById('myChart'),
                    config
                );
        </script>
    </body>
</html>