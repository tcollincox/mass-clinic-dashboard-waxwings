        <h1 class="header">Patient Screenings By Year</h1>
        <table class="data_table" id="screening_table" >
            <tr>
                <th>Patient Amount</th>
                <th>Recorded Year</th>
            </tr>
            <% patients.forEach(function(o) { %>
                <tr><td><%= o.PatientAmount %></td><td><%= o.RecordedYear %></td></tr>
            <% }); %>
        </table>
        <div id="canvas_container">
            <canvas id="myChart" width="200" height="200"></canvas>
        </div>
        
        <script>
            let screeningsPatientAmount =[];
            let screeningsRecoredYear = [];
            function arrayTable(table_id){
                let table = document.getElementById(table_id).rows;
                console.log(table);
                for(let i = 1; i<table.length; i++ ){
                        screeningsPatientAmount.push(table[i].cells[0].childNodes[0].nodeValue);
                        screeningsRecoredYear.push(table[i].cells[1].childNodes[0].nodeValue);
                }
                
            }

            arrayTable("screening_table");

            const labels = [
                "2019",
                "2020",
                "2021"
                ];
                const data = {
                labels: labels,
                datasets: [{
                    label: 'Screenings',
                    backgroundColor: 'rgb(66, 179, 229 )',
                    
                    data: screeningsPatientAmount,
                }]
                };
            
                const config = {
                    type: 'bar',
                    data,
                    options: {}
                };

                var myChart = new Chart(
                    document.getElementById('myChart'),
                    config
                );
        </script>
